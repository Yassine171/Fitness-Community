<!-- res/values/styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Style for the Gray Button -->
    <style name="GrayButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_below">@id/SportifChoice</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="market">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="back">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="search">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>
    <style name="click_me">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4B9460</item>
    </style>

</resources>
