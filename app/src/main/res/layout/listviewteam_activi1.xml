<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp"

    >
        <View
            android:id="@+id/rectangle_4"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_4"
            />

            <!-- Auto layout, variables, and unit scale are not yet supported -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:clipToOutline="true"
        android:src="@drawable/teama" />


                <TextView
                    android:id="@+id/team_a"
                    android:layout_width="87dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-10dp"
                    android:text="@string/team_a"
                    android:textAppearance="@style/team_a"

                    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="12dp"


            android:text="@string/membersCount"
            android:textAppearance="@style/members" />

        <TextView
            android:id="@+id/members_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/members_text"
            android:textAppearance="@style/members" />
    </LinearLayout>
</LinearLayout>









