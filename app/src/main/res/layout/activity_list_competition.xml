<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/page_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#E0E0E0">

        <!-- Back button -->
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="@string/back"
            android:textAppearance="@style/back" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/equipes"
            android:textAppearance="@style/content" />

        <!-- Filter -->
        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:text="@string/filter"
            android:textAppearance="@style/filter" />

    </RelativeLayout>



    <!-- SearchView -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_header"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_background" />

    <!-- Your other views above the posts -->
    <!-- ScrollView to hold multiple posts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_view">

        <!-- Container for posts -->
        <!-- Container for posts -->
        <GridLayout
            android:id="@+id/post_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_view"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="8dp"
            android:orientation="horizontal">

            <!-- First fragment in first row -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <include layout="@layout/fragment_post" />
            </FrameLayout>

            <!-- Second fragment in first row -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <include layout="@layout/fragment_post" />
            </FrameLayout>

            <!-- First fragment in second row -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <include layout="@layout/fragment_post" />
            </FrameLayout>

            <!-- Second fragment in second row -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <include layout="@layout/fragment_post" />
            </FrameLayout>

            <!-- Add more instances of FrameLayout with fragment_post include for multiple rows -->

        </GridLayout>
    </ScrollView>

</RelativeLayout>
