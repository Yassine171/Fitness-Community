<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:background="@drawable/rounded_card_whiter"
        >

    <TextView
        android:id="@+id/localizationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/loginTextView"
        android:fontFamily="serif"
        android:text="@string/FieldLocal"
        android:textColor="#5DB075"
        android:textSize="15dp" />
    <!-- Match Location -->
    <EditText
        android:id="@+id/editTextMatchLocation"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="10dp"
        android:hint="Match Location"
        android:background="@drawable/border"
        android:inputType="none"
        android:onClick="selectLocationFromMap"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Players Number -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="@string/Players"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/editTextPlayer1"
            android:layout_width="150dp"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:gravity="center"

            android:textColor="@color/white"
            android:inputType="number"/>


    </LinearLayout>

    <!-- Private/Public RadioGroup -->
    <RadioGroup
        android:id="@+id/radioGroupPrivacy"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_card">

        <!-- Private RadioButton -->
        <RadioButton
            android:id="@+id/radioButtonPrivate"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/border"
            android:textColor="@color/colorPrimary"
            android:text="Private"/>

        <!-- Public RadioButton -->
        <RadioButton
            android:id="@+id/radioButtonPublic"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:text="Public"/>
    </RadioGroup>


</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="15dp"
    android:background="@drawable/rounded_card_whiter"
    >
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:fontFamily="serif"
        android:text="@string/date"
        android:textColor="#5DB075"
        android:textSize="15dp" />

    <!-- Date Input -->
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:background="@drawable/border"
        android:hint="Date"
        android:inputType="none"
        android:focusable="false"
        android:drawableEnd="@drawable/ic_calendar"
        android:onClick="showDatePicker"/>

</LinearLayout>

    <!-- Start and End Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Start Time"
            android:inputType="none"
            android:focusable="false"
            android:onClick="showTimePicker"/>

        <EditText
            android:id="@+id/editTextEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="End Time"
            android:inputType="none"
            android:focusable="false"
            android:onClick="showTimePicker"/>
    </LinearLayout>

    <!-- Reminder Checkbox -->
    <CheckBox
        android:id="@+id/checkBoxReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Reminder"/>

</LinearLayout>
