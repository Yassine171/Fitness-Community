<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <TextView
       android:id="@+id/select_group"
       android:layout_width="264dp"
       android:layout_height="30dp"
       android:layout_marginLeft="56dp"
       android:layout_alignParentTop="true"
       android:layout_marginTop="35dp"
       android:text="@string/select_group_members"
       android:textAppearance="@style/select_team"

       />
   <EditText
       android:id="@+id/frame_11"
       android:layout_width="327dp"
       android:layout_height="52dp"
       android:background="@drawable/frame_1"
       android:clipToOutline="true"
       android:layout_marginTop="80dp"
       android:layout_marginLeft="40dp"
       android:hint="Search..."
       android:drawableLeft="@drawable/ic_search" />

   <Button
       android:id="@+id/confirmSelectionButton"
       android:layout_width="327dp"
       android:layout_height="64dp"
       android:layout_marginTop="660dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="20dp"
       android:background="@drawable/rounded_button"
       android:textColor="#FFFFFF"
       android:text="Save"
       android:fontFamily="serif"
       android:onClick="onConfirmSelectionClicked"/>
   />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <TextView
       android:id="@+id/back"
       android:layout_width="38dp"
       android:layout_height="19dp"
       android:layout_marginTop="10dp"
       android:text="@string/back"
       android:textAppearance="@style/back"
       android:gravity="top"
       />
   <ListView
       android:id="@+id/lisvieww"
       android:layout_width="match_parent"
       android:layout_height="500dp"
       tools:listitem="@layout/listwiew_activity"
       android:layout_marginTop="150dp"
       android:layout_marginLeft="-27dp"
       />
      </LinearLayout>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

