<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FEFA"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"
            android:clipToOutline="true"
            android:src="@drawable/teama" />


        <TextView
            android:id="@+id/team_a"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="146dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:text="@string/team_a"
            android:textAppearance="@style/team_a"

            />
        <TextView
            android:id="@+id/members"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:text="@string/members"
            android:textAppearance="@style/members"
            android:gravity="top"
            />

        <Button
            android:id="@+id/join"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="660dp"
            android:text="Join"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_style"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="660dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_style"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/back2"
                android:layout_width="100dp"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/back"
                android:textAppearance="@style/back"
                android:gravity="top"
                />
            <ListView
                android:id="@+id/lisvieww"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="-27dp"
                />
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
