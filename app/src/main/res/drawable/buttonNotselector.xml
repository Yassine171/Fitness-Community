<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- Background with solid color -->
            <item>
                <shape>
                    <solid android:color="#00000000" />
                    <corners android:radius="5dp" />
                    <!-- Add a stroke with transparent color (0x00000000) to remove the border -->
                    <stroke android:color="#00000000" android:width="1dp" />
                </shape>
            </item>
            <!-- Underline with transparent color (0x00000000) to remove it -->
            <item android:top="2dp" android:bottom="-2dp">
                <shape>
                    <solid android:color="#00000000" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
