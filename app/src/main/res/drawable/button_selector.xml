<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item >
        <layer-list>
            <!-- Background with solid color -->
            <item>
                <shape>
                    <solid android:color="#00000000" />
                    <corners android:radius="5dp" />
                    <!-- Add a stroke with transparent color (0x00000000) to remove the border -->
                    <stroke android:color="#00000000" android:width="1dp" />
                </shape>
            </item>
            <!-- Underline with the desired color and height -->
            <item android:top="40dp" android:bottom="3dp">
                <shape>
                    <solid android:color="#5DB075" />
                    <corners android:radius="200dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>
